      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "accordion_head",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "text",
          "id": "accordion_text",
          "label": "accordion text",
          "default": "Quick links"
        }
    ]
  }
 ],
  "presets": [
