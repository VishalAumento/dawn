{{ 'accordion.css' | asset_url | stylesheet_tag }}

<div class="accordion_section">
   {%- for block in section.blocks -%}
  <div class="accordion accordion--opened">
    
    <details>
      <summary>{{ block.settings.accordion_head }}
      </summary>
      <p>{{ block.settings.accordion_text }}</p>
   </details>
   
  </div>
 {% endfor %}
</div>











{% schema %}
  {
  "name": "accordion",
  "tag": "section",
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "accordion_head",
          "label": "Heading",
          "default": "Quick links"
        },
        {
        "type": "textarea",
        "id": "accordion_text",
        "label": "accordion ext",
        "default": "Welcome to my shop!"
      }
    ]
  }
 ],
  "presets": [
     {
       "name": "accordion",
       "settings": {
          
        }
     }
   ]
}
{% endschema %}

