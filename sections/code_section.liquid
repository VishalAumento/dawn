      <button type="button" id="learntocode_searchbtn" onclick="click_learntocode_search_btn()"><i id="learntocode_searchicon" class="fa fa-search"></i></button>
      <div id="listofsearchresults"></div>
    </form>
     </div>
   </div>
  </div>







