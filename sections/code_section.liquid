{{ 'code_section.css' | asset_url | stylesheet_tag }}

  <div class="codepen_section" >
    
   <div class="code">
     <div class="coad_section">
       <h2>{{ section.settings.header }}</h2>
     </div>
     <div class="coad_text">
       <p>{{ section.settings.coad_text }}</p>
     </div>
     <div class="form_section">
       <form class="example" action="/action_page.php" style="margin:auto;max-width:500px">
      <input type="text" placeholder="Search our tutorials, e.g. HTML" id="search2" autocomplete="off" onkeydown="key_pressed_in_search(event)" oninput="find_search_results(this)" onfocus="find_search_results(this)" style="border-bottom-left-radius: 25px;">
      <button type="button" id="learntocode_searchbtn" onclick="click_learntocode_search_btn()"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" /></path>
      </svg>
      </button>
    </form>
     </div>
       <div id="listofsearchresults">
         <a href="{{ section.settings.link }}"><p>{{ section.settings.list_text }}</p></a>
       </div>
   </div>
    <svg style="background-color:#D9EEE1;" width="100%" height="70" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path id="wavepath" d="M0,0  L110,0C35,150 35,0 0,100z" fill="#282A35"></path>
</svg>
  </div>





