{{ 'news_letter.css' | asset_url | stylesheet_tag }}

<div class="root">
  <div class="news_section">
    <div class="news_header">
      <h2>{{ section.settings.head }}</h2>
    </div>
    <div class="head">
      <h3>{{ section.settings.Master}}</h3>
    </div>
    <div class="pera">
       <p>{{ section.settings.peregraph }}</p>
    </div>
</div>
  <div class="view_point">
     <div class="free-plan">
        <div class="free_plan_button">
          <a href="{{ section.settings.button_link }}">{{ section.settings.button }}</a>
        </div>
       <div class="plan_section">
        <div class="price">
         <P>{{ section.settings.price }}</P>
       </div>
       <div class="name">
         <P>{{ section.settings.name }}</P>
       </div>
       <div class="description">
         <p>{{ section.settings.description }}</p>
       </div>
       <div class="manu_bar">
        {%- for block in section.blocks -%}
         <ul>
            <li>
              <a href="{{ block.settings.navbar_link }}"> {{ block.settings.navbar }}</a>
            </li>
         </ul>
          {% endfor %}
       </div>
       </div>
     
         <div class="get_start_button">
          <a href="{{ section.settings.button_link }}">{{ section.settings.button }}</a>
        </div>
     </div>
    
 <div class="plans-container">
     {%- for block in section.blocks -%}
      <div class="pro-plan proplan grid_index-{{ forloop.index }}">
         <div class="proplan_price">
         <P>{{ block.settings.pro-plan_price }}</P>
       </div>
       <div class="proplan_name">
         <P>{{ block.settings.pro-plan_name }}</P>
       </div>
       <div class="proplan_description">
         <p>{{ block.settings.pro-plan_description }}</p>
       </div>
       <div class="proplan_manu_bar">
        {%- for block in section.blocks -%}
         <ul>
            <li>
              <a href="{{ block.settings.proplan_navbar_link }}"> {{ block.settings.proplan_navbar }}</a>
            </li>
         </ul>
          {% endfor %}
       </div>
       <div class="proplan_get_start_button">
          <a href="{{ block.settings.pro-plan_button_link }}">{{ block.settings.pro-plan_button }}</a>
        </div>
       </div>
     {% endfor %}
         
 </div> 
    
     </div>
  </div>
     <div class="news_footer_header">
      <h3>{{ section.settings.footer_head }}</h3>
     <a href="{{ block.settings.footer_text_link }}"><p>{{ section.settings.footer_text }}</p></a>   
     </div>
      <div class="agreement">
        <p>{{ section.settings.agreementcontainer }}</p>
      </div>
</div>














